@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/nss.png" alt="NSS Logo" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Learn how to build ASP.NET apps that can run anywhere.
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/cohort26demoday.jpg" alt="Cohort 26 Demo" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Learn about Steve's 3rd favorite Cohort EVER!'
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
       
    <div class="col-md-3">
        <ul>
            <li><a asp-controller="Students" asp-action="Index">Students</a></li>
            <li><a asp-controller="Instructors" asp-action="Index">Instructors</a></li>
            <li><a asp-controller="Cohorts" asp-action="Index">Cohorts</a></li>
            <li><a asp-controller="Exercises" asp-action="Index">Exercises</a></li>
        </ul>
    </div>
</div>
